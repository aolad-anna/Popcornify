<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item
                android:bottom="12dp"
                android:left="8dp"
                android:right="8dp"
                android:top="12dp">
                <shape android:shape="rectangle">
                    <size android:height="20dp" />
                    <solid android:color="#616CAC" />
                    <corners
                        android:radius="15dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>